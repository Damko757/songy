{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "../api/src/Helpers/*.ts",
    "../api/src/DataBase/Schemas/**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
